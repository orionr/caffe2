if Brewery.Env.Config.LINK_CUDA_STATIC:
  cc_thirdparty_target(
    name = "cuda",
    cc_obj_files = [
        "-lcublas_static",
        "-lcurand_static",
        "-lcudart_static",
        "-lculibos",
        "-ldl",
    ] +
    (["-lrt"] if Brewery.Env.NEED_LIBRT else [])
  )
else:
  cc_thirdparty_target(
    name = "cuda",
    cc_obj_files = [
        "-lcublas",
        "-lcurand",
        "-lcudart",
    ],
  )

cc_thirdparty_target(
  name = "nvrtc",
  deps = [
    ":cuda",
  ],
  cc_obj_files = [
    "-lnvrtc",
    "-lcuda",
  ],
)